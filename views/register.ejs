<!doctype html>
<html lang="en">
<head lang="en">
    <% include head.ejs %>
</head>    
<body>
    <% include navbar.ejs %>
    <div class="container" style="margin-top: 86px">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">用户注册(<span class="required">*</span>为必填)</div>
                <div class="panel-body">
                    <form class="form" id="register">
                        <div class="form-group">
                            <label for="name" class="sr-only">用户名</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <span class="glyphicon glyphicon-user"></span>
                                </div>
                                <input id="name" name="name" class="form-control" type="text" placeholder="用户名">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="email" class="sr-only">邮箱</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <span class="glyphicon glyphicon-envelope"></span>
                                </div>
                                <input id="email" name="email" class="form-control" type="email" placeholder="邮箱" required>
                                <div class="input-group-addon required">*</div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="password" class="sr-only">密码</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <span class="glyphicon glyphicon-lock"></span>
                                </div>
                                <input id="password" name="password" class="form-control" type="password" placeholder="密码" required>
                                <div class="input-group-addon required">*</div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="password_two" class="sr-only">重复密码</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <span class="glyphicon glyphicon-lock"></span>
                                </div>
                                <input id="password_two" class="form-control" type="password" placeholder="重复密码" required>
                                <div class="input-group-addon required">*</div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-6 text-center">
                                <input type="reset" class="btn btn-danger" value="重置" />
                            </div>
                            <div class="col-xs-6 text-center">
                                <input type="submit" class="btn btn-primary" value="注册" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript" src="/js/register.js"></script>
</body>
</html>